    [CascadingParameter] UserStateMemory State { get; set; }

    int[,] StateArray = { 
        { 1, 1, 1, 1, 2, 2, 2, 3, 3, 4 }, 
        { 1, 2, 3, 4, 2, 3, 4, 3, 4, 4 } 
    };
    int Shapeloop = 0;
    private Timer aTimer = default!;

    public async void ChangeShape()
    {
        for (int i = 0; i < StateArray.Length; i++)
        {
            State.ShapeConfiguration = StateArray[0,i];
            State.ShapeRoundness = StateArray[1,i];
            await Task.Delay(2000);
        }
    }

    public async void AutoChangeShape()
    {
        State.ShapeConfiguration = StateArray[0, Shapeloop];
        State.ShapeRoundness = StateArray[1, Shapeloop];
        Shapeloop++;
        if (Shapeloop == 9) Shapeloop = 0;
    }

    async Task Repeat()
    {
        await Task.Delay(2000).ContinueWith(_ => { AutoChangeShape();});
    } 
    protected override async Task OnInitializedAsync()
    {
        AutoChangeShape();
       
       Task.Factory.StartNew(() =>
        {
            System.Threading.Thread.Sleep(2000);
